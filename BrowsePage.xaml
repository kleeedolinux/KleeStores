<Page x:Class="KleeStore.BrowsePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KleeStore"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BrowsePage"
      Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="Transparent" Padding="24,16,24,8">
            <TextBlock Text="Browse Software" FontSize="22" FontWeight="SemiBold" 
                       Foreground="{StaticResource TextBrush}"/>
        </Border>
        
        <!-- Packages List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <StackPanel x:Name="PackagesContainer" Margin="24,8,24,16">
                    <TextBlock x:Name="EmptyMessage" Text="No packages found" 
                               HorizontalAlignment="Center" Margin="0,60,0,0" 
                               FontSize="17" Foreground="{StaticResource TextSecondaryBrush}" 
                               Visibility="Collapsed" TextWrapping="Wrap"/>
                </StackPanel>
                
                <!-- Loading Indicator -->
                <StackPanel x:Name="ProgressIndicator" Visibility="Collapsed" 
                            HorizontalAlignment="Center" Margin="0,80,0,0">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="6" 
                                  Background="Transparent" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
        
        <!-- Pagination -->
        <Border Grid.Row="2" BorderBrush="#dfdfdf" BorderThickness="0,1,0,0" Background="White">
            <Grid Margin="24,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="PrevPageButton" Content="Previous" 
                            Style="{StaticResource ActionButton}" 
                            Margin="0,0,10,0" Click="PrevPageButton_Click"/>
                    <TextBlock x:Name="PageLabel" Text="Page 1" 
                               VerticalAlignment="Center" FontWeight="SemiBold"
                               Margin="16,0" Foreground="{StaticResource TextBrush}"
                               FontSize="14"/>
                    <Button x:Name="NextPageButton" Content="Next" 
                            Style="{StaticResource ActionButton}" 
                            Margin="10,0,0,0" Click="NextPageButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page> 